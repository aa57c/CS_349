		Scanner sc = new Scanner(System.in);
		int sum = 0;
		int user_input = 0;
		while(user_input != -1) {
			System.out.println("Enter a number:");
			user_input = sc.nextInt();
			sum += user_input;
		}
		System.out.println("Sum of all positive integers is: "+sum);
		sc.close();
	}

}
